{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(feat)"
  ],
  "bumpVersion": "patch",
  "ignoreDeps": [
    "postgresql"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^charts/*/Chart.yaml$"
      ],
      "matchStrings": [
        "image:\\s+\"(?<depName>[a-z/.-]+):(?<currentValue>[a-z0-9.-]+)\""
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "fileMatch": [
        "^charts/*/Chart.yaml$"
      ],
      "matchStrings": [
        "# image: \"(?<depName>[a-z/.-]+)\"\nappVersion:\\s+(?<currentValue>v[a-z0-9.-]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "helmv3": {
    "enabled": true
  }
}
